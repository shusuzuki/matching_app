<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false"    
        aria-controls="navbar">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to "matching-ac", root_path, id: "logo" %>
    </div>
    <nav>
      <ul id="navbar" class="nav navbar-nav navbar-right navbar-collapse collapse">
        <% if user_signed_in? %>
          <li><%= link_to "企業を探す", companies_path  %></li>
          <li><%= link_to "試験日程", schedule_path  %></li>
          <li>
            <div class="btn-group" role="group">
              <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true"       
                aria-expanded="false">
                アカウント
                <span class="caret"></span>
              </button>
              <ul class="dropdown-menu">
                <li><%= link_to "マイページ",  current_user %></li>
                <li><%= link_to "アカウント編集", edit_user_registration_path  %></li>
                <li><%= link_to "ログアウト", destroy_user_session_path, method: :delete %></li>
              </ul>
            </div>
          </li>
        <% elsif company_signed_in? %>
          <li><%= link_to "電気工事士を探す", users_path  %></li>
          <li>
            <div class="btn-group" role="group">
              <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true"       
                aria-expanded="false">
                アカウント
                <span class="caret"></span>
              </button>
              <ul class="dropdown-menu">
                <li><%= link_to "マイページ",  current_company %></li>
                <li><%= link_to "アカウント編集", edit_company_registration_path  %></li>
                <li><%= link_to "ログアウト", destroy_company_session_path, method: :delete %></li>
              </ul>
            </div>
          </li>
        <% else %>
          <li>
            <%= link_to root_path, class: 'home-icon' do %>
              <span class="glyphicon glyphicon-home" aria-hidden="true"></span>
            <% end %>
          </li>
          <li>
            <div class="btn-group" role="group">
              <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true"       
                aria-expanded="false">
                新規登録
                <span class="caret"></span>
              </button>
              <ul class="dropdown-menu">
                <li><%= link_to "個人向け登録",  new_user_registration_path %></li>
                <li><%= link_to "法人向け登録",  new_company_registration_path  %></li>
              </ul>
            </div>
          </li>
          <li>
            <div class="btn-group" role="group">
              <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true"       
                aria-expanded="false">
                ログイン
                <span class="caret"></span>
              </button>
              <ul class="dropdown-menu">
                <li><%= link_to "個人向けログイン",  new_user_session_path %></li>
                <li><%= link_to "法人向けログイン",  new_company_session_path %></li>
              </ul>
            </div>
          </li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
