<% provide(:title, "アカウント編集") %>
<div class="box">
  <div class="box-inner">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <h1>アカウント編集</h1>
      <%= render "companies/shared/error_messages", resource: resource %>
      <div class="field">
        <%= f.label :アバター %>
        <%= f.file_field :avatar %>
      </div>
      <div class="box-name">
        <%= f.label :company_name, "企業名" %><br />
        <%= f.text_field :company_name, autofocus: true, autocomplete: "company_name" %>
      </div>
      <div class="box-name">
        <%= f.label :company_url, "企業URL" %><br />
        <%= f.text_field :company_url, autocomplete: "company_url" %>
      </div>
      <div class="box-email">
        <%= f.label :メールアドレス %><br />
        <%= f.email_field :email, autocomplete: "email" %>
      </div>
      <div class="box-profile">
        <%= f.label :プロフィール %><br />
        <%= f.text_area :profile, size: "46x5" %>
      </div>
      <div class="box-qualification">
        <%= f.label :qualification, "求める資格は？(複数可)" %><br />
        <% qualification = ["第一種電気工事士","第二種電気工事士","1級電気工事施工管理技士","2級電気工事施工管理技士",
                            "電気主任技術者","その他"] %>
        <% qualification.each do |q| %><br>
          <%= f.check_box :qualification , {multiple: true},q,nil %>
          <%= f.label :qualification, q %>
        <% end %>
      </div>
      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>
      <div class="box-password">
        <%= f.label :新しいパスワード（6文字以上） %><br />
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>
      <div class="box-password">
        <%= f.label :パスワード（確認用） %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>
      <div class="box-password">
        <%= f.label :現在のパスワード（プロフィールを変更する場合は入力してください） %><br />
        <%= f.password_field :current_password, autocomplete: "current-password" %>
      </div>
      <div class="box-update">
        <%= f.submit "更新する" %>
      </div>
    <% end %>
    <div class="box-delete">
      <%= link_to "アカウントを削除する", registration_path(resource_name), data: { confirm: "本当によろしいですか？" }, method: :delete %>
    </div>
    <div class="box-mypage">
      <%= link_to "マイページに戻る", current_company %>
    </div>
  </div>
</div>
