<div class="box">
  <div class="box-inner">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <h1>法人向け登録</h1>
      <%= render "companies/shared/error_messages", resource: resource %>
      <div class="box-name">
        <%= f.label :company_name, "企業名" %><br />
        <%= f.text_field :company_name, autofocus: true, autocomplete: "company_name" %>
      </div>
      <div class="box-email">
        <%= f.label :email, "メールアドレス" %><br />
        <%= f.email_field :email, autocomplete: "email" %>
      </div>
      <div class="box-password">
        <%= f.label :password, "パスワード（6文字以上）" %><br />
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>
      <div class="box-password">
        <%= f.label :password_confirmation, "パスワード（確認用）" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>
      <div class="box-qualification">
        <%= f.label :qualification, "求める資格は？(必須/複数可)" %><br />
        <% qualification = ["第一種電気工事士","第二種電気工事士","1級電気工事施工管理技士","2級電気工事施工管理技士",
                            "電気主任技術者","その他"] %>
        <% qualification.each do |q| %><br>
        <%= f.check_box :qualification , {multiple: true},q,nil %>
          <%= f.label :qualification, q %>
        <% end %>
      </div>
      <div class="box-login">
        <%= f.submit "登録する" %>
      </div>
    <% end %>
    <div class="box-newuser">
      <p><span>---------</span> アカウントをお持ちですか？ <span>---------</span></p>
      <%= link_to "ログインする", new_company_session_path %>
    </div>
  </div>
</div>
