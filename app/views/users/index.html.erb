<h1>ユーザー覧</h1>
<div class="container">
  <ul class="users">
    <% @users.each do |user| %>
      <li>
        <% if user.avatar.attached? %>
          <%= image_tag user.avatar, class: "img-list" %>
        <% else %>
          <%= image_tag("avater/shutterstock_1714228723.jpg", class: "img-list") %>
        <% end %>
        <%= link_to user.name, user %>
      </li>
    <% end %>
  </ul>
</div>
