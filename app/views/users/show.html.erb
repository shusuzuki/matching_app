<div class="container">
  <div class="row">
    <aside class="info">
      <section class="user_info">
        <% if @user.avatar.attached? %>
          <%= image_tag @user.avatar, class: "img-circle" %>
        <% else %>
          <%= image_tag("avater/shutterstock_1714228723.jpg", class: "img-circle") %>
        <% end %>
        <h1>
          <%= @user.name %>
        </h1>
        <p>
          <%= @user.sex %>
          <%= @birthday %>歳
          <br>
          <div class="qualification">
            保有資格:<br> <%= @qualification %>
          </div>
          <br>
          <div class="profile">
          <%= @user.profile  %>
          </div>
        </P>
      </section>
    </aside>
  </div>
</div>
